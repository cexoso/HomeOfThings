{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2017",
    "module": "es2015",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@homeofthings/hot-express": ["projects/node/libs/hot-express/src/index.ts"],
      "@homeofthings/nestjs-config": ["projects/node/libs/nestjs-config/src/index.ts"],
      "@homeofthings/nestjs-logger": ["projects/node/libs/nestjs-logger/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
