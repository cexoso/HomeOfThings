{
  "name": "nestjs-sqlite3",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/node/@homeofthings/nestjs-sqlite3/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/node/@homeofthings/nestjs-sqlite3",
        "tsConfig": "packages/node/@homeofthings/nestjs-sqlite3/tsconfig.lib.json",
        "packageJson": "packages/node/@homeofthings/nestjs-sqlite3/package.json",
        "main": "packages/node/@homeofthings/nestjs-sqlite3/src/index.ts",
        "assets": ["packages/node/@homeofthings/nestjs-sqlite3/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs nestjs-sqlite3 {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/node/@homeofthings/nestjs-sqlite3/**/*.ts", "packages/node/@homeofthings/nestjs-sqlite3/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/node/@homeofthings/nestjs-sqlite3/jest.config.ts"
      }
    }
  },
  "tags": []
}
