{
  "name": "hot-cli",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/node/@homeofthings/hot-cli/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/node/@homeofthings/hot-cli",
        "tsConfig": "packages/node/@homeofthings/hot-cli/tsconfig.lib.json",
        "packageJson": "packages/node/@homeofthings/hot-cli/package.json",
        "main": "packages/node/@homeofthings/hot-cli/src/index.ts",
        "assets": ["packages/node/@homeofthings/hot-cli/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs hot-cli {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/node/@homeofthings/hot-cli/**/*.ts", "packages/node/@homeofthings/hot-cli/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/node/@homeofthings/hot-cli/jest.config.ts"
      }
    }
  },
  "tags": []
}
