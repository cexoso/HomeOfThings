{
  "name": "hot-cli",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/node/@homeofthings/hot-cli/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/node/@homeofthings/hot-cli",
        "tsConfig": "packages/node/@homeofthings/hot-cli/tsconfig.lib.json",
        "packageJson": "packages/node/@homeofthings/hot-cli/package.json",
        "main": "packages/node/@homeofthings/hot-cli/src/index.ts",
        "assets": ["packages/node/@homeofthings/hot-cli/*.md", "packages/node/@homeofthings/hot-cli/LICENSE"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/node/@homeofthings/hot-cli/**/*.ts", "packages/node/@homeofthings/hot-cli/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/node/@homeofthings/hot-cli/jest.config.ts"
      }
    },
    "version-bump": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/build/src/version-bump.js hot-cli {args.ver}",
        "envFile": "build/.env"
      },
      "dependsOn": [{ "projects": "build", "target": "build" }]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/build/src/publish.js hot-cli",
        "envFile": "build/.env"
      },
      "dependsOn": [{ "projects": "build", "target": "build" }, "build"]
    }
  },
  "tags": []
}
