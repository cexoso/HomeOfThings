#!/bin/bash
BN=$(basename "$0")
DN=$(dirname "$0")
. "${DN}/sh/common"
#--------------------------------------------------------------

usage() {
  cat <<EOT
  usage: $0 <package-shortname>
EOT
  exit 1
}

PACKAGE_SHORTNAME=$1

[ -n "${PACKAGE_SHORTNAME}" ] || usage

PACKAGE_DIR="ng/libs"
PACKAGE_JSON="${WORKSPACE_DIR}/projects/${PACKAGE_DIR}/${PACKAGE_SHORTNAME}/package.json"

CMD=( npx nx generate @nrwl/angular:lib "${PACKAGE_SHORTNAME}" --name="${PACKAGE_SHORTNAME}" --directory="${PACKAGE_DIR}" --simpleModuleName=true  --publishable --buildable --prefix=hot --style=scss --routing=true --lazy --importPath="@homeofthings/${PACKAGE_SHORTNAME}" --strict )

echo "${CMD[@]}"
"${CMD[@]}" || die "failed"

cat >"${PACKAGE_JSON}" <<EOT
{
  "name": "@homeofthings/${PACKAGE_SHORTNAME}",
  "description": "HomeOfThings - ${PACKAGE_SHORTNAME}",
  "version": "0.0.1"
}
EOT
[ $? -eq 0 ] || die "failed to create '${PACKAGE_JSON}'"

"${DN}/project.ts" rename "ng-libs-${PACKAGE_SHORTNAME}" "${PACKAGE_SHORTNAME}" || exit 1

succeeded
